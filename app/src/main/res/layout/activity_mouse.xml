<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_mouse_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.samonkey.remote.remote.MouseActivity">

    <include layout="@layout/title_remote"/>

    <include layout="@layout/volume_remote"/>

    <include layout="@layout/function_remote"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="滑动控制方向，点击确定"
        android:textColor="@color/lightRed"/>
</RelativeLayout>
